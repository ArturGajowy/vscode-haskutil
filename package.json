{
  "name": "haskutil",
  "displayName": "Haskutil",
  "description": "'QuickFix' actions for Haskell editor",
  "version": "0.9.0",
  "publisher": "Edka",
  "repository": {
    "url": "https://github.com/EduardSergeev/vscode-haskutil"
  },
  "engines": {
    "vscode": "^1.26.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "galleryBanner": {
    "theme": "dark",
    "color": "#444"
  },
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "haskell",
        "aliases": [
          "Haskell",
          "haskell"
        ],
        "extensions": [
          ".hs",
          ".lhs"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Haskutil configuration settings",
      "properties": {
        "haskutil.feature.addImport": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Enable [Add missing import](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#add-missing-import) feature"
        },
        "haskutil.feature.organizeImports": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Enable [Organize imports](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-imports) feature"
        },
        "haskutil.feature.removeUnusedImports": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Enable [Remove unused imports](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#remove-unused-imports) feature"
        },
        "haskutil.feature.addExtension": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Enable [Add missing LANGUAGE extension](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#add-missing-language-extension) feature"
        },
        "haskutil.feature.organizeExtensions": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Enable [Organize LANGUAGE extensions](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-language-extensions) feature"
        },
        "haskutil.feature.addSignature": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Enable [Add top-level signature](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#add-top-level-signature) feature"
        },
        "haskutil.feature.fillTypeHole": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "markdownDescription": "Enable [Fill type hole](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#fill-typed-hole) feature"
        },
        "haskutil.alignImports": {
          "type": "boolean",
          "markdownDescription": "Align imports when [organizing imports](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-imports) or [removing unused imports](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#remove-unused-imports)",
          "default": true
        },
        "haskutil.alwaysPadImports": {
          "type": "boolean",
          "markdownDescription": "Always pad after `import` regardless if there is `qualified` import or not",
          "default": false
        },
        "haskutil.sortImports": {
          "type": "boolean",
          "markdownDescription": "Sort imports when [organizing imports](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-imports)",
          "default": true
        },
        "haskutil.organizeImportsOnSave": {
          "type": "boolean",
          "markdownDescription": "[Organize imports](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-imports) when saving the document",
          "default": false
        },
        "haskutil.splitExtensions": {
          "type": "boolean",
          "markdownDescription": "Make sure there is one extension per `LANGUAGE` pragma when [organizing extensions](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-language-extensions)",
          "default": true
        },
        "haskutil.alignExtensions": {
          "type": "boolean",
          "markdownDescription": "Make sure `LANGUAGE` extension pragmas are of the same length when [organizing extensions](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-language-extensions)",
          "default": true
        },
        "haskutil.sortExtensions": {
          "type": "boolean",
          "markdownDescription": "Make sure `LANGUAGE` extension pragmas are sorted when [organizing extensions](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-language-extensions)",
          "default": true
        },
        "haskutil.organizeExtensionsOnSave": {
          "type": "boolean",
          "markdownDescription": "[Organize extensions](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-language-extensions) when saving the document",
          "default": false
        },
        "haskutil.organizeExtensionsOnInsert": {
          "type": "boolean",
          "markdownDescription": "[Organize extensions](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#organize-language-extensions) when adding new extensions",
          "default": true
        },
        "haskutil.supportedExtensions": {
          "type": "array",
          "markdownDescription": "Haskell `LANGUAGE` extensions specified in GHC's error messages which triggers QuickFix prompt for [adding missing LANGUAGE extensions](https://marketplace.visualstudio.com/items?itemName=Edka.haskutil#add-missing-language-extension)",
          "default": [
            "BangPatterns",
            "DataKinds",
            "DefaultSignatures",
            "DeriveFunctor",
            "DeriveGeneric",
            "FlexibleContexts",
            "FlexibleInstances",
            "FunctionalDependencies",
            "GADTs",
            "GeneralizedNewtypeDeriving",
            "KindSignatures",
            "MultiParamTypeClasses",
            "NamedFieldPuns",
            "RankNTypes",
            "RecordWildCards",
            "StandaloneDeriving",
            "TemplateHaskell",
            "TupleSections",
            "TypeFamilies",
            "TypeSynonymInstances",
            "UndecidableInstances",
            "TypeApplications",
            "ViewPatterns"
          ]
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:haskell"
  ],
  "extensionDependencies": [
    "jcanero.hoogle-vscode"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.8",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "vscode": "^1.1.36"
  }
}
